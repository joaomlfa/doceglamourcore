
@{
    Layout = "_MenuLayout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Menu Principal</title>
</head>
<body>

    <main class="col-md-10 ml-sm-auto col-lg-10 ml-auto">

        <div class="container mt-5">
            <div class="row">
                <div class="col">
                    <label class="col-sm-6 col-form-label">Data de Abertura</label>
                    <div class="col-6">
                        <input class="form-control" readonly>
                    </div>
                    <label class="col-sm-6 col-form-label">Valor de Abertura</label>
                    <div class="col-6">
                        <input class="form-control" readonly>
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 col-sm-5 ml-3" data-toggle="modal" data-target="#openCashier">Novo Caixa</button>
                </div>
                <div class="col">
                    <label class="col-sm-7 col-form-label">Data de Fechamento</label>
                    <div class="col-7">
                        <input class="form-control">
                    </div>
                    <label class="col-sm-7 col-form-label">Valor de Fechamento</label>
                    <div class="col-7">
                        <input class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary mt-4 col-sm-6 ml-3">Fechar Caixa</button>
                </div>
                <div class="col">
                    <label>Retiradas</label>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Valor</th>
                                <th scope="col">Dt. Retirada</th>
                                <th scope="col">Descrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">50,00</th>
                                <td>21/07/2020</td>
                                <td>Teste de Limite</td>
                            </tr>
                            <tr>
                                <th scope="row">100,00</th>
                                <td>21/07/2020</td>
                                <td>Teste de Limite</td>
                            </tr>
                            <tr>
                                <th scope="row">300,00</th>
                                <td>21/07/2020</td>
                                <td>Teste de Limite</td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#withdrawalCashier">Adicionar Retirada</button>
                    <button type="submit" class="btn btn-primary">Excluir Retirada</button>
                </div>
            </div>
            <div class="row">
                <label class="pt-3">Caixas Anteriores</label>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Número</th>
                            <th scope="col">Data de Abertura</th>
                            <th scope="col">Valor de Abertura</th>
                            <th scope="col">Data de Fechamento</th>
                            <th scope="col">Valor de Fechamento</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>21/07/2020</td>
                            <td>1000,00</td>
                            <td>21/07/2020</td>
                            <td>3000,00</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>22/07/2020</td>
                            <td>3000,00</td>
                            <td>22/07/2020</td>
                            <td>6000,00</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>23/07/2020</td>
                            <td>6000,00</td>
                            <td>23/07/2020</td>
                            <td>9000,00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Modal Cashier-->
        <div class="modal fade" id="openCashier" tabindex="-1" role="dialog" aria-labelledby="openCashier" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cashierTitle">Abrir Caixa</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="col-7">
                            <label>Valor de Abertura</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success">Abrir Caixa</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modal Withdrawal-->
        <div class="modal fade" id="withdrawalCashier" tabindex="-1" role="dialog" aria-labelledby="withdrawal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="withdrawalTitle">Retirada de Caixa</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="col-7">
                            <label>Descrição</label>
                            <input class="form-control">
                        </div>
                        <div class="col-7">
                            <label>Valor da Retirada</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success">Realizar Retirada</button>
                    </div>
                </div>
            </div>
        </div>
    </main>

</body>
</html>
